{
  "name": "elysia-boilerplate",
  "version": "1.0.0",
  "description": "Backend boilerplate with Bun, ElysiaJS, Better Auth and Drizzle ORM",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "start": "bun run src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "test": "bun test",
    "migrate:generate": "drizzle-kit generate",
    "migrate:apply": "bun run src/scripts/migrate.ts",
    "auth:generate": "bunx @better-auth/cli generate",
    "auth:migrate": "bunx @better-auth/cli migrate",
    "db:studio": "drizzle-kit studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart api"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/openapi": "^1.4.11",
    "@elysiajs/swagger": "^1.3.1",
    "better-auth": "^1.0.7",
    "drizzle-orm": "^0.36.4",
    "elysia": "^1.1.27",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "latest",
    "drizzle-kit": "^0.28.1"
  }
}
